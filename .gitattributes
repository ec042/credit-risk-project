# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Explicitly declare text files you want to always be normalized and converted to native line endings on checkout.
*.c text
*.h text
*.cpp text
*.hpp text
*.cs text
*.java text
*.js text
*.jsx text
*.ts text
*.tsx text
*.html text
*.css text
*.scss text
*.json text
*.xml text
*.md text
*.yml text
*.yaml text
*.sh text
*.py text
*.pkl binary


# Declare files that will have CRLF line endings on checkout.
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will have LF line endings on checkout.
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
